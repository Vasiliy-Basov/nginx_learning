[Unit]
Description=Prometheus Alertmanager Server
Documentation=https://github.com/alertmanager/alertmanager

[Service]
Restart=always
User={{ user }}
Group={{ group }}
EnvironmentFile={{ default_options_dir }}/alertmanager
ExecStart={{ alertmanager_binary_install_dir }}/alertmanager $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
