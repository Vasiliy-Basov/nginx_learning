
upstream {{domain_name}} {
        server "{{domain_name}}";
}
server {
        listen 80;
        server_name {{domain_name}} www.{{domain_name}};
        root /var/www/html;
        location / {
                return 301 https://{{domain_name}}$request_uri;
        }

        location ~/.well-known {
                allow all;
                }
}
